$grey: #525252;

@mixin box-shadow($h, $v, $blur, $color) {
  box-shadow: $h $v $blur $color;
  -webkit-box-shadow: $h $v $blur $color;
  -moz-box-shadow: $h $v $blur $color;
}

@mixin round-corners($size: 5px) {
  -moz-border-radius: $size;
  -webkit-border-radius: $size;
  border-radius: $size;
}

@mixin droid {
  font-family: 'Droid Sans', 'Helvetica', 'Helvetica Neue', Arial, 'Liberation Sans', FreeSans, sans-serif;
}

@mixin droid-mono {
  font-family: 'Droid Sans Mono', 'Andale Mono', 'Courier New', monospace;
}

@mixin transition($value, $time: 0.25s, $method: ease-in) {
  -webkit-transition: $value $time $method;
  -moz-transition: $value $time $method;
  -o-transition: $value $time $method;
}

html, body {
  @include droid;
  color: $grey;
}

body {
  background: url(<%= image_path('handmadepaper.png') %>);
}

a, a:visited {
  text-decoration: none;
}

a:hover {
  border-bottom: 1px dotted;
  text-decoration: none;
}

ol {
  li {
    margin-left: 25px;
  }
}

code {
  @include droid-mono;
  display: inline;
  padding: 0px 2px;
  background: transparentize(black, 0.9);
}

pre {
  @include droid-mono;
}

sup {
  vertical-align: super;
}

sub {
  vertical-align: sub;
}

ul, ol {
  margin: 0 0 1.52em;
}

.small, .footnote {
  font-size: 0.8em;
}

.fleft {
  float: left;
}

.fright {
  float: right;
}

.bright {
  margin-right: 10px;
}

.bbottom {
  margin-bottom: 10px;
}

.bleft {
  margin-left: 10px;
}

.btop {
  margin-top: 10px;
}

.mcenter {
  display: block;
  margin: {
    left: auto;
    right: auto;
  }
}

blockquote {
  p {
    margin: 0px;
  }

  text-shadow: transparentize(black, 0.75) 5px 5px 25px;
}

#file_upload {
  width: 600px;
}

#pfButton {
  display: inline;
}

.row {
  overflow: visible;
}

.field {
  margin-bottom: 10px;
}

.hidden {
  display: none;
}

#rdbWrapper {
  display: inline-block;
  height: 23px;
  width: 155px;
  position: relative;
  top: 1px;
}

#readabilityEmbedContainer, #readabilityEmbedIFrame {
  height: 23px !important;
}

#fb-root {
  display: none;
}

.fb-like {
  display: inline;
  top: -3px;
}

header {
  h1, nav, #tagline {
    margin: 10px;
  }

  h1 {
    @include droid-mono;
  }

  nav {
    ul {
      list-style-image: none;
      list-style-position: outside;
      list-style-type: none;

      li {
        display: inline;
      }
    }
  }

  padding: {
    top: 0px;
    bottom: 10px;
    left: 5px;
  }

  text-align: center;
  width: 100%;
}

#content {
  article.main {
    @include transition(background);
    @include round-corners;

    .snippet {
      margin-bottom: 10px;
    }

    .extra_links {
      height: 1.5em;
    }

    h2 {
      margin: 0px;
    }

    .archive_title {
      display: inline;
    }

    margin: {
      bottom: 10px;
    }

    padding: 5px;
    margin: 5px 0px;

    &:hover {
      $back: transparentize(black, 0.9);
      background: $back;
    }

    &.preview {
      .meta, .extra_links {
        @include transition(opacity);
        opacity: 0.01;
      }

      &:hover {
        .meta, .extra_links {
          opacity: 1;
        }
      }
    }
  }

  .post {
    h1 {
      margin: 0px;
    }
  }

  .content {
    a, a:visited {
      border-bottom: 1px dotted;

      &:hover {
        color: black;
      }
    }

    p.footnote.first {
      padding-top: 10px;
      border-top: 1px solid transparentize(black, 0.75);
      clear: both;
    }

    img.round {
      @include round-corners;
    }

    font-size: 115%;
  }

  .meta {
    time {
      text-transform: uppercase;
    }

    margin-bottom: 10px;
  }

  #archives {
    font-weight: bold;
    text-align: center;
  }
}

#sidebar {
  #search {
    input[type=text] {
      @include round-corners(10px);

      width: 100%;
      background: white;

      &:hover, &:focus {
        outline: none;
        opacity: 1;
      }
    }

    input[type=image] {
      position: absolute;
      top: 16px;
      right: 4px;
      opacity: 0.65;
    }

    margin-top: 10px;
  }

  #where {
    a {
      margin: 6px;
      height: 28px;
      width: 28px;

      &:hover {
        border: 0px
      }
    }
  }

  section {
    ul {
      list-style: {
        image: none;
        position: outside;
        type: none;
      }
    }

    margin: {
      bottom: 20px;
    }
  }

  overflow: visible;

  iframe.twitter-follow-button {
    width: 175px !important;
    position: relative;
    top: -6px;
    right: -10px;
  }
}

footer {
  text-align: center;

  padding: {
    top: 10px;
    bottom: 10px;
  }
}