- title = "#{params[:category].capitalize} articles"
- content_for(:description, "Articles in the #{params[:category]} category")
- content_for(:title, title_text(title))
- content_for(:canonical, category_url(params[:category]))
- cache([title, @posts].hash) do
  %h1= title
  = render(partial: 'post_preview', collection: @posts)