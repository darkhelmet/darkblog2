- content_for(:head) do
  = stylesheet_link_tag('plupload.queue')

- content_for(:footer) do
  = javascript_include_tag('plupload.full.min', 'jquery.plupload.queue.min')
  :javascript
    $(document).ready(function() {
      $('.pics li a:first').facebox();
      $('#file_upload').pluploadQueue({
        runtimes: 'html5',
        url: '#{admin_uploads_url}',
        filters: [
          { title: 'Images', extensions: 'jpg,gif,png' }
        ],
        multipart_params: {
          authenticity_token: $('meta[name="csrf-token"]').attr('content'),
          post_id: '#{@post.id}'
        }
      });
    });

