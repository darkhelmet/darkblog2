%section#search
  = form_tag('/search', method: :get) do
    = text_field_tag('query', nil, placeholder: "Search #{Darkblog2.config.title}")
    = image_submit_tag(image_path('magnifier.png'))
%section#where
  - render_social_links
%section#author
  = gravatar(280)
  Daniel Huckstep is a software engineer (EIT) in
  = link_to('Edmonton, Alberta, Canada', "http://maps.google.com/maps?f=q&source=s_q&hl=en&geocode=&q=Edmonton,+Alberta,+Canada&sll=53.543564,-113.490452&sspn=0.456975,1.234589&ie=UTF8&hq=&hnear=Edmonton,+Division+No.+11,+Alberta,+Canada&t=h&z=11")
%section#chicklet
  %p
    = link_to(feed_path) do
      = image_tag('http://feeds.feedburner.com/~fc/VerboseLogging?bg=FF9900&fg=000000&anim=0', size: '88x26', style: 'border: 0', alt: 'Feedburner Chicklet')
    %a.twitter-follow-button{ :href => 'http://twitter.com/darkhelmetlive', 'data-show-count' => 'false' } Follow @darkhelmetlive
    = javascript_include_tag('http://platform.twitter.com/widgets.js')
%section#boastful
- if show_ads?
  %section#hypela
    %iframe{ :src => 'http://hype.la/ads/a94fa92f-43a1-47c4-aa95-db2ed968c9ca.html', :width => '155px', :height => '300px', :style => 'border: 0px; overflow: hidden' }
      %p
        Ads provided by
        = link_to('hype.la', 'http://hype.la')
%section#shout_out
  Hosting by:
  %br
  = image_tag('heroku.png')

