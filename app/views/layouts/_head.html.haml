= content_type_tag
= csrf_meta_tag
= title_tag
= description_tag
= canonical_tag
= opensearch_tag
= sitemap_tag
= favicon_tag
= apple_touch_icon_tag
= rss_tag
= index_tag
= readability_tag
= font_tag('Droid+Sans:regular,italic,bold,bolditalic')
= font_tag('Droid+Sans+Mono')
= stylesheet_link_tag('application')
= tag(:meta, name: 'HandheldFriendly', content: 'True')
= tag(:meta, name: 'MobileOptimized', content: '320')
= tag(:meta, name: 'viewport', content: 'width=device-width, target-densitydpi=160, initial-scale=1.0')
= javascript_include_tag('head')

- if Rails.env.development?
  :javascript
    var disqus_developer = 1;

= content_for(:head)

- if Rails.env.production?
  :javascript
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-2062105-4']);
    _gaq.push(['_trackPageview']);
    _gaq.push(['_trackPageLoadTime']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
